pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
            git credentialsId: 'javahome2', url: 'https://github.com/SriKanth170195/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
					
                 sh "mvn clean package"                
            }
        }
        
    
    
    
    
     stage('Build Docker Image'){
            steps{
                 sh 'docker build -t srikanth777/dev .'
                 sh 'docker build -t tomcat:${BUILD_NUMBER} .'
                 sh 'docker run -itd --name sri -p 2900:8080 tomcat:${BUILD_NUMBER}'
             }
         }
	 
	 stage('Push Docker Image'){
             steps{
                  withCredentials([string(credentialsId: 'DOCKER_HUB_CREDENTIALS', variable: 'DOCKER_HUB_CREDENTIALS')]) {
                      sh "docker login -u srikanth777 -p ${DOCKER_HUB_CREDENTIALS}"
            }
            sh 'docker push srikanth777/spring-boot-mongo'
        }
      }



        

    }
}
